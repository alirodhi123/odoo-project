<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="helpdesk_ticket_form_view" model="ir.ui.view">
            <field name="name">helpdesk_lite.ticket.form.view</field>
            <field name="model">helpdesk_lite.ticket</field>
            <field name="arch" type="xml">
                <form>
                <header>
                    <button string="Request"
                            type="object"
                            name="request"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', '1')]}"/>

                    <button string="I Take It"
                            type="object"
                            name="takeit_new"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', '2')]}"
                            groups="helpdesk_lite.group_helpdesk_lite_manager"/>

                    <button string="Solved"
                            type="object"
                            name="solved"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', '3')]}"
                            groups="helpdesk_lite.group_helpdesk_lite_manager"/>

                    <button string="Done"
                            type="object"
                            name="done"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', '4')]}"/>

                    <button string="Reset In Progress"
                            type="object"
                            name="reset_to_inprogress"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', '5')]}"/>

                    <button string="Pending"
                            type="object"
                            name="pending"
                            attrs="{'invisible': [('state', 'in', ['6', '7'])]}"
                            groups="helpdesk_lite.group_helpdesk_lite_manager"/>

                    <button string="Reset to Draft"
                            type="object"
                            name="reset_to_draft"
                            attrs="{'invisible': [('state', '!=', '6')]}"
                            groups="helpdesk_lite.group_helpdesk_lite_manager"/>

                    <button string="Cancel" type="object" name="cancel"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="1,2,3,4,5"/>
<!--                    <field name="stage_id" widget="statusbar" clickable="True"-->
<!--                        options="{'fold_field': 'fold'}"/>-->
                </header>

                <sheet string="Ticket">
                    <div class="oe_button_box" name="button_box">

                        <button name="toggle_active" type="object" groups="helpdesk_lite.group_helpdesk_manager"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <field name="kanban_state" class="oe_inline" widget="kanban_state_selection"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Ticket Summary..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="x_request_id" widget="many2one"/>
                            <field name="no_ticket"/>
                            <field name="category_ticket" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="type_ticket"/>
                            <!--<field name="contact_name" attrs="{'invisible': [('partner_id', '!=', False)]}"/>
                            <field name="email_from"/> -->
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="start_date"/>
                            <field name="finish_date"/>
                            <field name="verification_date"/>
                            <field name="selisih_date"/>
                            <field name="duration_verification_date"/>
                            <field name="total_pengerjaan"/>
                            <!-- <field name="team_id"/>
                            <field name="priority" groups="base.group_user" widget="priority"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Add an internal note..." groups="base.group_user"/>
                        </page>
                        <page string="Detail Problem">
                            <field name="category_masalah_ids">
                                <tree editable="bottom">
                                    <!--<field name="categ_id" options="{'no_create': True, 'no_create_edit':True}"></field>-->
                                    <field name="problem_description"></field>
                                </tree>
                            </field>
                        </page>

                        <!--uswa-tambah page 'Parts'-->
                        <page string="Parts">
                            <field name="parts_list_ids">
                                <tree editable="bottom">
                                    <field name="parts2_id" options="{'no_create': True, 'no_create_edit':True}"></field>
                                    <field name="parts_qty"></field>
                                    <field name="parts_uom" groups="product.group_uom"></field>
                                    <field name="parts_desc"></field>
                                </tree>
                            </field>
                        </page>
                         <!--<group string="Available Parts">-->
                             <!--<field name="parts_ready_lines" nolabel="1" readonly="1">-->
                                 <!--<tree string="Available Parts">-->
                                     <!--<field name="product_id" string="Parts"/>-->
                                     <!--<field name="product_qty"/>-->
                                     <!--<field name="product_uom" groups="product.group_uom"/>-->
                                 <!--</tree>-->
                             <!--</field>-->
                         <!--</group>-->
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="helpdesk_ticket_tree_view" model="ir.ui.view">
            <field name="name">helpdesk_lite.ticket.tree.view</field>
            <field name="model">helpdesk_lite.ticket</field>
            <field name="arch" type="xml">
                <tree string="Issue Tracker Tree" decoration-bf="message_needaction==True">
                    <field name="message_needaction" invisible="1"/>
                    <field name="no_ticket"/>
                    <field name="name"/>
                    <field name="x_request_id"/>
                    <field name="category_ticket"/>
                    <field name="type_ticket"/>
                    <field name="user_id"/>
                    <field name="start_date"/>
                    <field name="finish_date"/>
                    <field name="state"/>
                    <!--<field name="stage_id" widget="selection" readonly="1"/> -->
                </tree>
            </field>
        </record>

        <record id="view_helpdesk_ticket_filter" model="ir.ui.view">
            <field name="name">helpdesk_lite.ticket.search.view</field>
            <field name="model">helpdesk_lite.ticket</field>
            <field name="arch" type="xml">
                <search string="Ticket Search">
                    <field name="no_ticket"/>
                    <field name="x_request_id" operator="child_of"/>
                    <field name="user_id"/>
                    <field name="stage_id" domain="[]"/>
                    <filter string="My Tickets" name="my_tickets" domain="['|',('user_id','=',uid),('user_id','=',False)]"/>
                    <filter string="Unassigned" name="unassigned" domain="[('user_id', '=', False)]"/>
                    <separator/>
                    <filter string="New" name="draft" domain="[('stage_id.sequence', '=', 1)]"/>
                    <separator/>
                    <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction','=',True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By" >
                        <filter string="Assigned to" name="Responsible" context="{'group_by':'user_id'}" />
                        <filter string="Task" context="{'group_by':'task_id'}"/>
                        <filter string="Priority" context="{'group_by':'priority'}" />
                        <filter string="State" context="{'group_by':'state'}" />
                        <!--<filter string="Stage" context="{'group_by':'stage_id'}"/>-->
                        <filter string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                        <separator/>
                        <filter string="Create Day" context="{'group_by':'create_date:day'}" help="Create Date"/>
                        <filter string="Last Message" name="group_message_last_post" context="{'group_by':'message_last_post:week'}"/>
                    </group>
                </search>
            </field>
        </record>

