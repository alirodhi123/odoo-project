        <record model="ir.ui.view" id="crm_form_view">
            <field name="name">crm.view.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                 <!--<notebook>-->
