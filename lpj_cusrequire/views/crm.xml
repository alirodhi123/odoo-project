                        <!--attrs="{'invisible': ['|', ('x_flag_sq', '=', True),('stage_id', '=', 6),('stage_id', '=', 7)]}"-->
                        <!--&gt;-->
                    <!--</button>-->
                </xpath>
                 <xpath expr="//button[@name='%(crm.crm_activity_log_action)d']" position="replace">
