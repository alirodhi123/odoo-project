<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <report
            id="report_quotation"
            model="x.print.quo"
            string="Quotation"
            report_type="qweb-pdf"
            name="lpj_cusrequire.report_document_quo"
            file="lpj_cusrequire.report_document_quo"
            menu="True"
        />

        <record id="paperformat_quotation" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">4</field>
            <field name="margin_bottom">23</field>
            <field name="margin_left">4</field>
            <field name="margin_right">4</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field> <!-- Jika ingin header muncul ubah nilai - 0 -->
            <field name="dpi">90</field>
        </record>

        <record id="lpj_cusrequire.report_quotation" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="lpj_cusrequire.paperformat_quotation" />
        </record>

        <template id="report_document_quo">
            <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                    <div class="page">
                        <div class="col-xs-6">
                            <h1>TES</h1>
                        </div>

                        <!-- Row judul quotation  -->
                        <div class="row">
                            <div class="col-xs-12" style="margin-top: 200px">
                                <h2>
                                    <span>Quotation # </span>
                                    <span t-field="o.name"/>
                                </h2>
                            </div>
                        </div>

                        <!-- Row deskripsi field parent -->
                        <div class="row mt32 mb32" id="informations">
                            <div t-if="o.x_cust" class="col-xs-3">
                                <strong>Customer:</strong>
                                <p t-field="o.x_cust"/>
                            </div>
                        </div>

                        <!-- Row table -->
                        <div class="row" style="margin-top:30px;">
                            <div class="col-xs-12">
                                <h4>Quotation Line</h4>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Quotation</th>
                                            <th>Item</th>
                                            <th>Product</th>
                                            <th class="text-right">Qty</th>
                                            <th class="text-right">Harga Pcs</th>
                                            <th class="text-right">Total Harga</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.x_quo_line" t-as="row">
                                            <td><span t-field="row.x_cusreq"></span></td>
                                            <td><span t-field="row.x_item_desc"></span></td>
                                            <td><span t-field="row.x_prod"></span></td>
                                            <td class="text-right"><span t-field="row.x_qty"></span></td>
                                            <td class="text-right"><span t-field="row.x_price_pcs"></span></td>
                                            <td class="text-right"><span t-field="row.x_total_price"></span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Row deskripsi total -->
                        <div class="row">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.x_untaxed_amount"/>
                                            <!--<span t-field="doc.x_untaxed_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>-->
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="oe_structure"/>
                    </div> <!-- Tutup page -->
                </t>
            </t>
        </template>

    </data>
</odoo>