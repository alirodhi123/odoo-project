<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <report
            id="report_quotation"
            model="x.print.quo"
            string="Quotation"
            report_type="qweb-pdf"
            name="lpj_cusrequire.report_document_quo"
            file="lpj_cusrequire.report_document_quo"
            menu="True"
        />

        <record id="paperformat_quotation" model="report.paperformat">
            <field name="name">European A4 low margin</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">6</field>
            <field name="margin_bottom">4</field>
            <field name="margin_left">6</field>
            <field name="margin_right">6</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field> <!-- Jika ingin header muncul ubah nilai - 0 -->
            <field name="dpi">90</field>
        </record>

        <record id="lpj_cusrequire.report_quotation" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="lpj_cusrequire.paperformat_quotation" />
        </record>

        <template id="report_document_quo">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.html_container">
                    <div class="page">
                        <div class="row">
                        <div class="col-xs-3">
                            <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' %res_company.logo" style="width: 180%"/>
                        </div>
                    </div>
                    <br></br>

                    <!-- Untuk garis horizontal-->
                    <div class="row zero_min_height">
                        <div class="col-xs-12">
                            <div style="border-bottom: 1px solid black;"/>
                        </div>
                    </div>

                        <!--<div class="col-xs-6">-->
                            <!--<h1></h1>-->
                        <!--</div>-->

                        <!-- Row judul quotation  -->
